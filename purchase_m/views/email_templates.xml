<odoo>
    <data>
        <record id="email_template_purchase_request" model="mail.template">
            <field name="name">Purchase Request Email</field>
            <field name="model_id" ref="purchase_m.model_purchase_order"/>
            <field name="subject">{{ object.company_id.name }}</field>
            <field name="email_from">{{ object.user_id.email }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="description">Email sent for Purchase Requests</field>
            
            
        </record>
    </data>
</odoo>
