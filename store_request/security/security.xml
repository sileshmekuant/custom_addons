<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Define a new category for Purchase Management -->
        <record id="module_category_purchase_management" model="ir.module.category">
            <field name="name">Purchase Management</field>
            <field name="sequence" eval="11"/> <!-- Determines the display order in the UI -->
        </record>
        
        <!-- Store Manager Group -->
        <record id="group_store_manager" model="res.groups">
            <field name="name">Store Manager</field>
            <field name="category_id" ref="module_category_purchase_management"/>
        </record>

        <!-- Purchase Manager Group -->
        <record id="group_purchase_manager" model="res.groups">
            <field name="name">Purchase Manager</field>
            <field name="category_id" ref="module_category_purchase_management"/>
        </record>


        <!-- Shift Leader Group -->
        <record id="group_shift_leader" model="res.groups">
            <field name="name">Shift Leader</field>
            <field name="category_id" ref="module_category_purchase_management"/>
        </record>

        <!-- group_production_manager -->
        <record id="group_production_manager" model="res.groups">
            <field name="name">Production Manager</field>
            <field name="category_id" ref="module_category_purchase_management"/>
        </record>
        <!-- group_general_manager -->
        <record id="group_general_manager" model="res.groups">
            <field name="name">General Manager</field>
            <field name="category_id" ref="module_category_purchase_management"/>
        </record>


    </data>

</odoo>
